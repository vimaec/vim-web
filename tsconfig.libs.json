{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",

    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",

    "strict": false
  },
  "include": ["src/vim-web/**/*"]
}
