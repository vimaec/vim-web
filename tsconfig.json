{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",

    "strict": false
  },
  "include": ["src/**/*"]
}
